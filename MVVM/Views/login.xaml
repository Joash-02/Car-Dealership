<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarDealership.MVVM.Views.login"
             Title="login"
             BackgroundColor="White">
    
    <Grid>
        <Grid>
            <Label Text="Log In" 
                   TextColor="Black" 
                   HorizontalOptions="Center" 
                   FontSize="30"
                   Margin="0,180,0,0"/>
        </Grid>

        <Grid HorizontalOptions="Center" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Entry x:Name="emailEntryFeild" Placeholder="Email" BackgroundColor="Wheat" TextColor="Black" Grid.Row="0" WidthRequest="400"/>
            <Entry x:Name="passwordEntryFeild" Placeholder="Password" BackgroundColor="Wheat" TextColor="Black" Grid.Row="1"/>
            <Button x:Name="Login" Text="Login" Clicked="Login_Clicked" BackgroundColor="Black" TextColor="White" Grid.Row="2"/>
            <Button x:Name="register" Text="Sign Up" Grid.Row="3" Margin="320,0,0,0" Clicked="register_Clicked" TextColor="Black"/>
        </Grid>
    </Grid>
</ContentPage>